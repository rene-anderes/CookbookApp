<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/anderes_orange</item>
        <item name="android:fontFamily">@font/proza_libre</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorAccent">@color/anderes_orange</item>
    </style>

    <!-- The default font for RecyclerView items is too small.
                The margin is a simple delimiter between the words. -->
    <style name="recipe_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>

    </style>

</resources>
